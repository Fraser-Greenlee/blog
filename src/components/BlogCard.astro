---
export interface Props {
  title: string;
  description: string;
  date: string;
  slug: string;
  image?: string;
  categories?: string[];
}

const { title, description, date, slug, image, categories = [] } = Astro.props;

const formattedDate = new Date(date).toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'short',
  day: 'numeric'
});
---

<article class="py-4 group">
  <a href={`/blog/${slug}`} class="block">
    <div class="flex items-baseline gap-4">
      <time class="text-sm font-mono text-stone-500 flex-shrink-0">{formattedDate}</time>
      <div class="flex-grow">
        <h3 class="text-lg font-mono font-medium mb-1 group-hover:text-stone-900 transition-colors">
          {title}
        </h3>
        <p class="text-stone-600 text-sm leading-relaxed">
          {description}
        </p>
      </div>
    </div>
  </a>
</article>